---
interface Props {
  currentPage: number;
  totalPages: number;
  baseUrl?: string;
}

const { currentPage, totalPages, baseUrl = '' } = Astro.props;

const hasPrevious = currentPage > 1;
const hasNext = currentPage < totalPages;

const previousUrl = currentPage === 2 ? baseUrl || '/' : `${baseUrl}/page/${currentPage - 1}`;
const nextUrl = `${baseUrl}/page/${currentPage + 1}`;
---

{totalPages > 1 && (
  <nav class="flex items-center justify-center gap-4 sm:gap-8 mt-12" aria-label="Pagination">
    {hasPrevious ? (
      <a
        href={previousUrl}
        class="text-text-secondary hover:text-text-primary transition-colors duration-200 text-sm font-medium no-underline"
      >
        &larr; Previous
      </a>
    ) : (
      <span class="text-border text-sm font-medium">&larr; Previous</span>
    )}

    <span class="text-text-secondary text-sm">
      Page {currentPage} of {totalPages}
    </span>

    {hasNext ? (
      <a
        href={nextUrl}
        class="text-text-secondary hover:text-text-primary transition-colors duration-200 text-sm font-medium no-underline"
      >
        Next &rarr;
      </a>
    ) : (
      <span class="text-border text-sm font-medium">Next &rarr;</span>
    )}
  </nav>
)}
