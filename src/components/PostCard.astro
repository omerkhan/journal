---
interface Props {
  title: string;
  date: Date;
  slug: string;
  media: {
    url: string;
    type: 'image' | 'video';
    alt: string;
  };
}

const { title, date, slug, media } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
  month: 'long',
  day: 'numeric',
  year: 'numeric',
});
---

<a href={`/posts/${slug}`} class="group block relative overflow-hidden rounded-lg bg-surface shadow-sm hover:shadow-md transition-base no-underline">
  <div class="aspect-[4/5] overflow-hidden">
    {media.type === 'image' ? (
      <img
        src={media.url}
        alt={media.alt}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
        loading="lazy"
      />
    ) : (
      <video
        src={media.url}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
        muted
        loop
        playsinline
      />
    )}
  </div>

  <!-- Overlay that appears on hover -->
  <div class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none">
  </div>

  <!-- Content that appears on hover (desktop) / always visible on mobile -->
  <div class="absolute bottom-0 left-0 right-0 p-4 translate-y-2 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300 sm:translate-y-2 sm:opacity-0">
    <h3 class="font-serif text-lg text-white mb-1 line-clamp-2">
      {title}
    </h3>
    <p class="text-white/80 text-sm">
      {formattedDate}
    </p>
  </div>

  <!-- Mobile: Always visible info below image -->
  <div class="sm:hidden p-4 bg-surface">
    <h3 class="font-serif text-lg text-text-primary mb-1 line-clamp-2">
      {title}
    </h3>
    <p class="text-text-secondary text-sm">
      {formattedDate}
    </p>
  </div>
</a>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
